{
  "manifest_version": 3,
  "name": "Auto-fill",
  "version": "2.1",
  "description": "Auto-fill Microsoft Forms - Tìm hiểu Pháp luật 20251 (v2.1)",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://forms.office.com/*"],
      "js": ["answers-data.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
